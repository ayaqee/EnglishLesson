@model EnglishLesson.Models.VocabularyItem

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>VocabularyItem</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Word)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Word)
            @Html.ValidationMessageFor(model => model.Word)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Translation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Translation)
            @Html.ValidationMessageFor(model => model.Translation)
        </div>

            @Html.HiddenFor(m => m.TranslateSuggestions[0].Id)
            @Html.HiddenFor(m => m.TranslateSuggestions[1].Id)
            @Html.HiddenFor(m => m.TranslateSuggestions[2].Id)


        <div class="editor-label">
            Sugestia 1
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.TranslateSuggestions[0].Suggestion)
        </div>

        <div class="editor-label">
            Sugestia 2
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.TranslateSuggestions[1].Suggestion)
        </div>
        <div class="editor-label">
            Sugestia 3
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.TranslateSuggestions[2].Suggestion)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
